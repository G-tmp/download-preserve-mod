{
  "manifest_version": 2,
  "name": "Download (preserve mod time)",
  "version": "1.0",
  "description": "Download file with server Last-Modified time",
  "homepage_url": "https://github.com/g-tmp/download-preserve-mod",

  "icons": {
    "48": "mikoto.jpg"
  },

  "permissions": [
    "downloads",
    "menus",
    "webRequest",
    "nativeMessaging",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "@dow_mod",
      "strict_min_version": "92.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}